
!SmalltalkImage methodsFor: '*Morphic'!
aboutThisSystem
	"Identify software version"
	| text dialog width |
	text := Smalltalk systemInformationString withCRs.
	width := 0.
	text
		linesDo: [:l | width := width 
						max: ( self theme textFont widthOfStringOrText: l)].
	dialog := LongMessageDialogWindow new entryText: text.
	dialog iconMorph image: ThemeIcons pharoIcon.
	dialog title: 'About Pharo'.
	dialog open.
	dialog textMorph minWidth: 20;
		 minHeight: 20.
	dialog
		width: (width + 120 min: Display width - 50).
	dialog position: 25 @ 25! !
